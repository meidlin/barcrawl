<style>

body{
	background-image:url("http://dezinetribe.files.wordpress.com/2013/11/brown-tlv-pic-by-mosh-benjamin-8-rooftop-bar.jpg");
	background-size: cover;
	background-repeat:no-repeat;
}
h1 {
	color:white;
}

.front_welcome{
	height:410px;
	width:520px;
	border: 1px solid black;
	background-color: white;


}

.sign_in{
	width: 300px;
	height: 200px;
	background-color: white;
	margin-left: 50px;
	text-align:center;

}

.sign_up{
	width: 300px;
	height: 300px;
	background-color: white;
	margin-left: 50px;
	text-align:center;

}
p{
	color:white;
}
</style>

<body>
	<div class="frontcard">
		<div class="front-welcome">
				<h1>Welcome to Barcrawl.</h1>
					<p class="welcome"> "Organize your next barcrawl with friends." 
					</p>
		<!-- Sign In Panel -->
		<div class="sign_in panel">
					<h2>Sign In</h2>
					<%= form_for(@user, {url: sessions_path}) do |f| %>
		  <% if @user.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

		      <ul>
		      <% @user.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
			  <div class="field">
			    <%= f.label :email %><br>
			    <%= f.text_field :email %>
			  </div>
			  <div class="field">
			    <%= f.label :password %><br>
			    <%= f.password_field :password %>
			  </div>
		<% end %>

		<%= button_to "Sign in", welcome_path, method: :get %>
		</div>
		<!-- Sign Up Panel -->
			<div class="sign_up panel">
					<h2> Sign Up</h2>
					<%= render 'form' %>
			</div>
		</div>	
	</div>
</body>